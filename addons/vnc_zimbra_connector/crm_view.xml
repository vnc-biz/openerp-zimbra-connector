<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_opp_form" model="ir.ui.view">
            <field name="name">crm.opp.page.form</field>
            <field name="model">crm.lead</field>
            <field name="priority">100</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
            <field name="arch" type="xml">
                <notebook colspan="4" position="before">
                    <separator string="Partner All Contacts" />
                    <field name="lead_add_line" nolabel="1" widget="many2many_kanban" context="{'default_partner_address_id': partner_id or False}">
                    	<kanban quick_create="false" create="true">
                        	<field name="email"/>
                        	<field name="partner_address_id"/>
	                        <templates>
	                            <t t-name="kanban-box">
	                                <a t-if="! read_only_mode" type="delete" style="position: absolute; right: 0; padding: 4px; diplay: inline-block">X</a>
	                            	<div class="oe_module_desc">
                                        <div class="oe_kanban_box_content oe_kanban_color_bglight oe_kanban_color_border">
                                            <table class="oe_kanban_table">
                                                <tr>
                                                    <td class="oe_kanban_title1" align="left" valign="middle">
                                                        <h4><a type="open"><field name="partner_address_id"/></a></h4>
                                                        <div><a t-if="record.email.raw_value" title="Mail" t-att-href="'mailto:'+record.email.value">
                                                            <field name="email"/>
                                                        </a></div>
                                                    </td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>
	                            </t>
	                        </templates>
                    	</kanban>
                        <tree string="Address" editable="top">
                            <field name="partner_address_id" />
                            <field name="phone" />
                            <field name="fax" />
                            <field name="email" />
                            <field name="mobile" />
                            <field name="responsibility"/>
                        </tree>
                    </field>
                </notebook>
            </field>
        </record>
	
		
		<record id="view_calendar_event_search" model="ir.ui.view">
			<field name="name">calendar.event.search</field>
			<field name="model">calendar.event</field>
			<field name="inherit_id" ref="calendar.view_calendar_event_search" />
			<field name="arch" type="xml">
				<xpath expr="//filter[@string='My Events']" position="replace">
					<filter icon="terp-go-today" name="myevents" string="My Events" domain="[('user_id','=',uid)]" help="My Events"/>
				</xpath>
			</field>
		</record>
		
		<record model="ir.actions.act_window" id="calendar.action_calendar_event">			
			<field name="context">{
                'search_default_myevents':1                
            }</field>
		</record>

		
        <!-- Migration v8: Calendar Meeting menu 
        <menuitem name="Calendar Meeting"
        id="calendar.mail_menu_calendar" parent="mail.mail_my_stuff"
        sequence="10" action="base_calendar.action_crm_meeting"/>
        -->
    </data>
</openerp>
