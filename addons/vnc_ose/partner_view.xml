<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- PARTNER RESPONSIBILITY -->
        <record id="view_partner_responsibility_form" model="ir.ui.view">
            <field name="name">res.partner.responsibility.form</field>
            <field name="model">partner.responsibility</field>
            <field name="arch" type="xml">
                <form string="Partner Responsibility" version="7.0">
                    <sheet>
                        <group col="4">
                            <field name="name" select="1" required="1" />
                            <field name="description" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_partner_responsibility_tree" model="ir.ui.view">
            <field name="name">res.partner.responsibility.tree</field>
            <field name="model">partner.responsibility</field>
            <field name="arch" type="xml">
                <tree string="Partner Responsibility">
                    <field name="name" />
                    <field name="description" />
                </tree>
            </field>
        </record>
        <record id="action_partner_responsibility_form" model="ir.actions.act_window">
            <field name="name">Partner Responsibility</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">partner.responsibility</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_partner_responsibility_tree" />
        </record>
        <menuitem name="Partner Responsibility" action="action_partner_responsibility_form"
            parent="base.menu_config_address_book" groups="base.group_user"
            id="menu_action_partner_responsibility_form" />
            <!--Lead Address Line -->
            <record id="view_lead_address_line_tree" model="ir.ui.view">
            <field name="name">lead.address.line.tree</field>
            <field name="model">lead.address.line</field>
            <field name="type">tree</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Address">
                    <field name="partner_address_id" />
                    <field name="phone" />
                    <field name="fax" />
                    <field name="email" />
                    <field name="mobile" />
                    <field name="responsibility" />
                </tree>
            </field>
        </record>
        <record id="view_lead_address_line_form" model="ir.ui.view">
            <field name="name">lead.address.line.form</field>
            <field name="model">lead.address.line</field>
            <field name="type">form</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Address">
                	<group name="main_gp">
	                    <field name="partner_address_id" on_change="onchange_partner_address_id(partner_address_id)" />
	                    <field name="phone" />
	                    <field name="fax" />
	                    <field name="email" />
	                    <field name="mobile" />
	                    <field name="responsibility" />
                    </group>
                </form>
            </field>
        </record>
    </data>
</openerp>