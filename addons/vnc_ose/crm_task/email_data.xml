<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data noupdate="1">
	
		<!-- 		************ Task Done notification ******* -->
		<record id="email_template_task_done" model="email.template">
			<field name="name">Task Done Notification</field>
			<field model="ir.model" search="[('model','=','crm.task')]"
				name="model_id" />
			<field name="email_from">VNC ERP &lt; notifications@vnc.biz &gt;</field>
			<field name="email_to">${object.user_id.email}, ${ctx.get('user_email')}</field>
			<field name="subject">Task Done : ${object.name}</field>
			<field name="auto_delete" eval="False"/>
			<field name="body_html"><![CDATA[
				OpenERP Notification:
				<br/>
				Crm Task:<br/>
				Hello ! ${object.user_id.name} , ${ctx.get('user_name') or ''}<br/>
				Task ${object.name} has been closed.<br/>
				<br/>
				<% set signup_url = object.get_signup_url_reminder_task() %>
			    % if signup_url:
			        You can access the Task:<a style="display:block; width: 150px; height:20px; margin-left: 5px; color: #DDD; font-family: 'Lucida Grande',
			        	Helvetica, Arial, sans-serif; font-size: 13px; font-weight: bold; text-align: center; text-decoration: none !important; line-height: 1; 
			        	padding: 5px 0px 0px 0px; background-color: #8E0000; border-radius: 5px 5px; background-repeat: repeat no-repeat;"
			           href="${ctx['login_url']}">View Task</a>
			    % endif
			    <br/>
				<br/>
				You have received this notification because you<br/>
				have either subscribed<br/>
				to it, or are involved in it.<br/>
				<br/>
				In case of questions please contact our support team.<br/>
				<br/>
				---<br/>
				Sender: VNC OpenERP<br/>
				Email: vnc-openerp@vnc.biz<br/>
				]]>
			</field>
		</record>
		
		
	</data>
</openerp>

