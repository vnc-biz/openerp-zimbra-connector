<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_lead_form_zimbra" model="ir.ui.view">
            <field name="name">crm.lead.page.form.zimbra</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_leads" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='contact_name']" position="replace">
                    <field name="contact_name" placeholder="First Name" class="oe_inline"/><field name="contact_last_name" placeholder="Last Name" class="oe_inline"/>
                </xpath>
                <xpath expr="//field[@name='description']" position="replace">
                    <field name="description" widget="html" nolabel="1"/>
                </xpath>
            </field>
        </record>
        
        <record id="do_unlink_view" model="ir.ui.view">
	        <field name="name">crm.activity.do.unlink.form</field>
	        <field name="model">crm.activity.do.unlink</field>
	        <field name="arch" type="xml">
	            <form string="Activity Unlink">
	            	<group colspan="4">
						<label string="Attention, if you delete this appointment you will also affect the next activity of lead" colspan="2" 
						style="color:RED;font-size:13px;" />
						
						
					</group>
					<footer>
                        <button name="do_delete" type="object" string="Delete Transition"	icon="gtk-ok" />
                        or
                        <button string="_Cancel" icon="gtk-cancel" special="cancel" />
                    </footer>
	            </form>
	        </field>
	    </record>
        
        
        <record model="ir.actions.act_window" id="action_do_unlink">
			<field name="name">Unlink Activity Transition</field>
			<field name="res_model">crm.activity.transition</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="do_unlink_view" />
			<field name="context">{'default_do_unlink':1}</field>
			<field name="target">new</field>
		</record>
		
		<!-- Inherits Lead form view -->
		<record id="view_lead_form_zimbra" model="ir.ui.view">
            <field name="name">lead.form.zimbra</field>
            <field name="model">crm.lead</field>
            <field name="priority">110</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_leads" />
            <field name="arch" type="xml">
            	<xpath expr="//field[@name='fax']" position="after">
            		<field name="last_activity_id" invisible="1"/>
            		<label for="next_activity_id"/>            		
            		<div class="o_row">
                        <field name="next_activity_id"
                               options="{'no_create': True, 'no_open': True}"
                               domain="['|',('team_id','=',False),('team_id','=',section_id)]"
                               on_change="onchange_next_activity_id(next_activity_id)"/>
                        <span attrs="{'invisible': ['|', ('last_activity_id','=',False), ('next_activity_id', '&lt;&gt;', False)]}">
                            <button name="log_next_activity_1" type="object" class="oe_link" attrs="{'invisible': [('next_activity_1','=',False)]}">
                                <field name="next_activity_1" readonly="1"/>
                            </button>
                            <button name="log_next_activity_2" type="object" class="oe_link" attrs="{'invisible': [('next_activity_2','=',False)]}">
                                <field name="next_activity_2" readonly="1"/>
                            </button>
                            <button name="log_next_activity_3" type="object" class="oe_link" attrs="{'invisible': [('next_activity_3','=',False)]}">
                                <field name="next_activity_3" readonly="1"/>
                            </button>
                        </span>
                        <span class="oe_read_only oe_form_field"
                              attrs="{'invisible': ['|', ('next_activity_id', '=', False), '|', ('date_action', '=', False), ('datetime_action', '=', False)]}">&#160;on&#160;</span>
                        <field name="allday" invisible="1"/>
                        <field name="date_action" attrs="{'invisible': ['|', ('next_activity_id', '=', False), ('allday', '=', False)]}" placeholder="Choose a date..."/>                        
                        <field name="datetime_action" attrs="{'invisible': ['|', ('next_activity_id', '=', False), ('allday', '=', True)]}" placeholder="Choose a date..."/>
                    	<field name="title_action" placeholder="e.g. Discuss proposal"
                               attrs="{'invisible': [('next_activity_id', '=', False)]}"/>
                        <field name="show_action" invisible="1"/>
                        <button name="add_more_details" string="Add more details" type="object" class="oe_link" attrs="{'invisible': [('next_activity_id', '=', False)]}"/>
<!--                         <button name="add_to_activity_calendar" string="Add to transition calendar" type="object" class="oe_link" attrs="{'invisible': [('show_action', '=', False)]}"/> -->
                        <br/>
                        <span attrs="{'invisible': [('next_activity_id', '=', False)]}">
                            <button name="log_next_activity_done" string="Done" type="object" class="oe_link"/>
                            <label string=" "/>
                            <button name="cancel_next_activity" string="Cancel" type="object" class="oe_link"/>                    
                        </span>   
                    </div>                   
            	</xpath>
            	<notebook position="inside">
					<page string="Transition Activities">
						<group string="Activity Transitions">
							<field name="activity_transition_ids" context="{'default_lead_id':active_id}" nolabel="1" editable="top">
								<tree string="Activity Transition" delete="false" create="false">
					                <field name="name" string="Transition Name"/>
					                <field name="activity_id"/>
					                <field name="lead_id"/>
					                <field name="start_date"/>
					                <field name="start_datetime"/>
					                <field name="state" invisible="1"/>
					                <button name="do_delete" string="Delete" type="object" icon="gtk-cancel"/>
					            </tree>					            			
							</field>
						</group>
					</page>
				</notebook>            
           </field>
       	</record>
       	
       	
        <!-- Inherits Opportunity form View -->
        <record id="view_opportunity_form_zimbra" model="ir.ui.view">
            <field name="name">opportunity.form.zimbra</field>
            <field name="model">crm.lead</field>
            <field name="priority">110</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_oppor" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='description']" position="replace">
                    <field name="description" widget="html"/>
                </xpath>
                <xpath expr="//label[@for='title_action']" position="replace">
                	<label for="next_activity_id"/>
                </xpath>
                <xpath expr="//field[@name='title_action']" position="replace"/>
                <xpath expr="//label[@string='-']" position="replace"/>
                
                <xpath expr="//field[@name='date_action']" position="replace">
                	<field name="last_activity_id" invisible="1"/>
                            
                    <div class="o_row">
                        <field name="next_activity_id"
                               options="{'no_create': True, 'no_open': True}"
                               domain="['|',('team_id','=',False),('team_id','=',section_id)]"
                               on_change="onchange_next_activity_id(next_activity_id)"/>
                        <span attrs="{'invisible': ['|', ('last_activity_id','=',False), ('next_activity_id', '&lt;&gt;', False)]}">
                            <button name="log_next_activity_1" type="object" class="oe_link" attrs="{'invisible': [('next_activity_1','=',False)]}">
                                <field name="next_activity_1" readonly="1"/>
                            </button>
                            <button name="log_next_activity_2" type="object" class="oe_link" attrs="{'invisible': [('next_activity_2','=',False)]}">
                                <field name="next_activity_2" readonly="1"/>
                            </button>
                            <button name="log_next_activity_3" type="object" class="oe_link" attrs="{'invisible': [('next_activity_3','=',False)]}">
                                <field name="next_activity_3" readonly="1"/>
                            </button>
                        </span>
                        <span class="oe_read_only oe_form_field"
                              attrs="{'invisible': ['|', ('next_activity_id', '=', False), '|', ('date_action', '=', False), ('datetime_action', '=', False)]}">&#160;on&#160;</span>
                        <field name="allday" invisible="1"/>
                        <field name="date_action" attrs="{'invisible': ['|', ('next_activity_id', '=', False), ('allday', '=', False)]}" placeholder="Choose a date..."/>                        
                        <field name="datetime_action" attrs="{'invisible': ['|', ('next_activity_id', '=', False), ('allday', '=', True)]}" placeholder="Choose a date..."/>                        
                    </div>
                    <div class="o_row">
                        <field name="title_action" placeholder="e.g. Discuss proposal"
                               attrs="{'invisible': [('next_activity_id', '=', False)]}"/>
                        <field name="show_action" invisible="1"/>
                        <button name="add_more_details" string="Add more details" type="object" class="oe_link" attrs="{'invisible': [('next_activity_id', '=', False)]}"/>
<!--                         <button name="add_to_activity_calendar" string="Add to transition calendar" type="object" class="oe_link" attrs="{'invisible': [('show_action', '=', False)]}"/> -->
                        <br/>
                        <span attrs="{'invisible': [('next_activity_id', '=', False)]}">
                            <button name="log_next_activity_done" string="Done" type="object" class="oe_link"/>
                            <label string=" "/>
                            <button name="cancel_next_activity" string="Cancel" type="object" class="oe_link"/>                    
                        </span>                        
                    </div>
                </xpath>
                <notebook position="inside">
					<page string="Transition Activities">
						<group string="Activity Transitions">
							<field name="activity_transition_ids" context="{'default_lead_id':active_id}" nolabel="1" editable="top">
								<tree string="Activity Transition" delete="false" create="false">
					                <field name="name" string="Transition Name"/>
					                <field name="activity_id"/>
					                <field name="lead_id"/>
					                <field name="start_date"/>
					                <field name="start_datetime"/>
					                <field name="state" invisible="1"/>
					                <button name="do_delete" string="Delete" type="object" icon="gtk-cancel"/>
					            </tree>					           				
							</field>
						</group>
					</page>
				</notebook>              
            </field>
        </record>
        
        
        <record id="crm_lead_view_tree_activity" model="ir.ui.view">
            <field name="name">crm.lead.next.activity.tree</field>
            <field name="model">crm.lead</field>
            <field name="arch" type="xml">
                <tree string="Next Activity" create="false" decoration-danger="date_action and (date_action &lt; current_date)" default_order="date_action">
                    <field name="name"/>
                    <field name="date_action"/>
                    <field name="next_activity_id"/>
                    <field name="title_action"/>
                    <field name="date_deadline"/>
                </tree>
            </field>
        </record>
        
        <record id="crm_lead_action_activities" model="ir.actions.act_window">
	        <field name="name">Next Activities</field>
	        <field name="type">ir.actions.act_window</field>
	        <field name="res_model">crm.lead</field>
	        <field name="view_mode">tree,form</field>
	        <field name="search_view_id" ref="crm.view_crm_case_opportunities_filter"/>
	        <field name="view_ids"
	               eval="[(5, 0, 0),
	                      (0, 0, {'view_mode': 'tree', 'view_id': ref('crm_lead_view_tree_activity')}),
	                      (0, 0, {'view_mode': 'form', 'view_id': ref('view_opportunity_form_zimbra')}), 
	                      (0, 0, {'view_mode': 'kanban'})]"/>
	        <field name="domain">[('type','=','opportunity'), ('next_activity_id', '!=', False)]</field>
	        <field name="context">{
	                'default_type': 'opportunity',
	                'default_user_id': uid,
	                'search_default_assigned_to_me': 1
	            }
	        </field>
	        <field name="help" type="html">
	            <p>
	               Here is the list of your next activities. Those are linked to your opportunities.
	               To set a next activity, go on an opportunity and add one. It will then appear in this list.
	            </p>
	        </field>
	    </record>

    <menuitem id="crm_lead_menu_activities" name="Next Activities" sequence="6"
        parent="base.menu_sales" action="crm_lead_action_activities" />
        
    </data>
</openerp>
